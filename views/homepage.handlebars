<h1>All Existing Blog Posts</h1>
{{#each posts}}
<section class="d-flex flex-column w-50 bg-primary-subtle m-2">
    <a role="button" href="/viewpost/{{this.dataValues.id}}"><h1 class="d-flex justify-content-between align-items-center bg-primary text-white rounded p-2">{{this.dataValues.title}}</h1></a>
    <p class="p-2">{{this.dataValues.date}}</p>
    <p class="p-2">{{this.dataValues.text}}</p>
</section>
{{/each}}